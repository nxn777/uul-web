@page
@model uul_web.Pages.Users.UserEditModel
@{
    ViewData["Title"] = "Edit user";
}

<div class="text-center">
    <h1 class="display-4">Edit user @Html.DisplayFor(model => model.UserProfile.Login)</h1>
</div>

<div asp-validation-summary="All" class="text-danger"></div>
<form method="post">
    <div class="text-left">
        <h1 class="display-6">Apartment @Html.DisplayFor(model => model.UserProfile.ApartmentCode)</h1>
    </div>
    <div class="form-group">
        <label asp-for="UserProfile.IsActivated" class="control-label"></label>
        <input asp-for="UserProfile.IsActivated" class="form-control"/>
       
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}